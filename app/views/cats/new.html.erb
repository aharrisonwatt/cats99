<h1> Cat Machine </h1>

<form action= "<%= cats_url %>" method= "post">
  <table>
    <tr>
      <td>
        <label for= 'name'> Cat name: </label>
        <input type= 'text' name= 'cat[name]' value= 'Name' id= 'name'>
      </td>
    </tr>

    <tr>
      <td>
        <p> Cat sex: </p>
        <input type= 'radio' name= 'cat[sex]' id= 'cat_sex_female' value= 'f'>
        <label for= 'cat_sex_female'> Female </label>
      </td>
    </tr>

    <tr>
      <td>
        <input type= 'radio' name= 'cat[sex]' id= 'cat_sex_male' value= 'm'>
        <label for= 'cat_sex_male' > Male </label>
      </td>
    </tr>
    <br>

    <tr>
      <td>
        <label for= 'bday'> Select birthday! </label>
        <input type= 'date' name= 'cat[birth_date]' id= 'bday'>
      </td>
    </tr>
    <br>

    <tr>
      <td>
        <label for= 'cat_color'> Select cat color </label>
        <select name= 'cat[color]' id='cat_color'>
          <option value= 'pink'> Pink </option>
          <option value= 'black'> Black </option>
          <option value= 'calico'> Calico </option>
          <option value= 'grey'> Grey </option>
      </select>
      </td>
    </tr>
    <br>

    <tr>
      <td>
        <label for= 'cat_description'> Describe yo' cat! </label>
        <textarea name= 'cat[description]' id= 'cat_description'></textarea>
      </td>
    </tr>

  </table>
  <br>


  <input type = 'submit' value = 'Playing God'>

</form>
